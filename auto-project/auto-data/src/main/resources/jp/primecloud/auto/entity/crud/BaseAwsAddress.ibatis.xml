		<include refid="selectSql" />
		<![CDATA[
		where
			t1.ADDRESS_NO in
		]]>
		<iterate property="addressNos" open="(" close=")" conjunction=", ">
			<![CDATA[
				#addressNos[]#
			]]>
		</iterate>
	</select>

	<insert id="create" parameterClass="AwsAddress">
		<![CDATA[
		insert into AWS_ADDRESS (
