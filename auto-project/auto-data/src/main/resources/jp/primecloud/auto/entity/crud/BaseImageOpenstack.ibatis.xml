			IMAGE_ID = #imageId#,
			KERNEL_ID = #kernelId#,
			RAMDISK_ID = #ramdiskId#,
			INSTANCE_TYPES = #instanceTypes#
		where
			IMAGE_NO = #imageNo#
		]]>
